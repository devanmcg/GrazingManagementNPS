@Article{daniel2016,
  author       = {Daniel, Colin J. and Frid, Leonardo and Sleeter, Benjamin M. and Fortin, Marie-Josée},
  title        = {State-and-Transition Simulation Models: A Framework for Forecasting Landscape Change},
  journaltitle = {Methods in Ecology and Evolution},
  date         = {2016-11-01},
  volume       = {7},
