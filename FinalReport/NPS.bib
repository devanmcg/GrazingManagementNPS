@Article{dorresteijn2015,
  author       = {Dorresteijn, Ine and Loos, Jacqueline and Hanspach, Jan and Fischer, Joern},
  title        = {Socioecological Drivers Facilitating Biodiversity Conservation in Traditional Farming Landscapes},
