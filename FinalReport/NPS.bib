@Article{chronert2007,
  author       = {Chronert, Jamie M. and Jenks, Jonathan A. and Roddy, Daniel E. and Wild, Margaret A. and Powers, Jenny G.},
  title        = {Effects of {{Sarcoptic Mange}} on {{Coyotes}} at {{Wind Cave National Park}}},
  journaltitle = {Journal of Wildlife Management},
  date         = {2007-08-01},
  volume       = {71},
