@Article{allred2013,
  author       = {Allred, Brady W. and Fuhlendorf, Samuel D. and Hovick, Torre J. and Elmore, R. Dwayne and Engle, David M. and Joern, Anthony},
  title        = {Conservation Implications of Native and Introduced Ungulates in a Changing Climate},
  journaltitle = {Global Change Biology},
