}

@Article{miller2017,
  author       = {Miller, Brian W. and Symstad, Amy J. and Frid, Leonardo and Fisichelli, Nicholas A. and Schuurman, Gregor W.},
  title        = {Co-Producing Simulation Models to Inform Resource Management: A Case Study from Southwest {{South Dakota}}},
