@article{soongjenniferl.2014,
  title = {Annual Burning of a Tallgrass Prairie Inhibits {{C}} and {{N}} Cycling in Soil, Increasing Recalcitrant Pyrogenic Organic Matter Storage While Reducing {{N}} Availability},
