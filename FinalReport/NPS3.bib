  shortjournal = {PLOS ONE},
  urldate = {2018-03-26},
  date = {2016-05-16},
  pages = {e0155068},
  keywords = {Plants,Flowering plants,Flowers,Insects,Invasive species,Plant-insect interactions,Pollen,Pollination},
  author = {Larson, Diane L. and Rabie, Paul A. and Droege, Sam and Larson, Jennifer L. and Haar, Milton},
  file = {C:\\Users\\devan.mcgranahan\\Zotero\\storage\\Q3SFJS6T\\Larson et al. - 2016 - Exotic Plant Infestation Is Associated with Decrea.pdf}
