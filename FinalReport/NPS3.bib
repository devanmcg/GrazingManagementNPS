  type = {Thesis},
  urldate = {2018-03-28},
  date = {2017},
  author = {Erickson, Amy Nicole},
  file = {C:\\Users\\devan.mcgranahan\\Zotero\\storage\\H9TSIIT7\\Erickson - 2017 - Responses of grassland birds to patch-burn grazing.pdf}
}

@article{cross2015,
